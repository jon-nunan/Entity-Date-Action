function date_action_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  $element = array();
  $account = $GLOBALS['user'];
  if (!user_access('edit node expire', $account)) {
    return $element;
  }
  switch ($display['type']) {
    // This formatter simply outputs the field as text and with a color.
    case 'date_action_default_formatter':
      foreach ($items as $delta => $item) {
	    $term = taxonomy_term_load($item['tid']);
        $element[$delta]['#markup'] = '<p> '. $term->name .': ' . $item['date'] . '</p>';
      }
      break;
  }

  return $element;
}


