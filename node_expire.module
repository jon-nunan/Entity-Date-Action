function node_expire_cron() {
  watchdog('node expire', 'Checking for nodes to expire', NULL);
  $time = date(NODE_EXPIRE_FORMAT, REQUEST_TIME);
  // get all active fields
  
  $fields = db_select('field_config', 'f')->fields('f',array('field_name'));
  $fields->condition('type', 'node_expire_field', '=');
  $fields = $fields->execute()->fetchAssoc();
  watchdog('node expire', print_r($fields,true), NULL);
  watchdog('node expire time', $time, NULL);
  foreach($fields as $field) {
    $result = db_select('field_data_'.$field, 'fd')->fields('fd', array('entity_type', 'entity_id', $field.'_date', $field.'_tid', $field.'_active', 'delta'));
